# ~/.bash_aliases
# This file is sourced by ~/.bashrc for custom command aliases.

# --- eza (modern ls) ---
# Consistently using --color=always to prevent conflicts and ensure colored output.
# Added --group-directories-first for better readability.
alias ls='eza --color=always --icons --group-directories-first'
alias la='eza --color=always --all --icons --group-directories-first'
alias ll='eza --long --color=always --git --icons --group-directories-first'
alias llt='eza --long --tree --color=always --git --icons --group-directories-first'

# --- Navigation ---
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# --- Custom Script Aliases ---
# These rely on the scripts being in the user's PATH (e.g., ~/bin).
alias update-sys='update_system'
alias newpy='new_pyproject'
alias newweb='new_webproject'
alias backupd='backup_dir'
alias syncd='sync_backup'
alias serveh='serve_here'
alias ochat='ollama_chat'
alias remindme='remind_me'
alias lznpm='lazynpm'
alias lzgit='lazygit' # Added for consistency with lznpm
